[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    E501,
    W503,
    W504
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    data,
    *.pyc,
    *.pyo,
    *.pyd,
    .pytest_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    test_*.py:E501
    */test_*.py:E501 